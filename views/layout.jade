doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='//cdn.rawgit.com/morteza/bootstrap-rtl/master/dist/cdnjs/3.3.1/css/bootstrap-rtl.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body


    // Fixed navbar
    .navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') #{title}
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li(class=(currentpage === "Home" ? 'active' : ''))
              a(href="/") עמוד הבית
            li(class=(currentpage === "Video" ? 'active' : ''))
              a(href="Video") סרטון (צד-לקוח)
            li(class=(currentpage === "Code" ? 'active' : ''))
              a(href="Code") קוד
            li(class=(currentpage === "About" ? 'active' : ''))
              a(href="About") אודות
            li(class=(currentpage === "Contact" ? 'active' : ''))
              a(href="Contact") צור קשר
        // /.nav-collapse
    // /.navbar

    div.wrapper
      div.container.container-fluid
        block content

    script(src='http://localhost:35729/livereload.js')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src='javascripts/bootstrap.js')
    script(src='javascripts/main.js')

